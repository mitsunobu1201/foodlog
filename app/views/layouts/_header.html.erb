<header style="border-bottom: 5px solid #d8d8d8">
  <div class="container col-sm-12 col-md-10 col-lg-12 col-xl-12 d-flex justify-content-between pr-0">

    <!--ロゴ-->
    <div class="row">
      <a class="navbar-brand text-dark" href="/">

      </a>
    </div>

    <!--リンク一覧-->
    <div class="row-auto justify-content-end d-flex align-content-center flex-wrap">
      <nav class="navbar navbar-expand-lg navbar-expand-md navbar-dark pt-3">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>

            <li class="m-3">
              <%= link_to "About", about_path, class: 'nav-link text-center text-dark border border-secondary rounded', style: "width: 80px" %>
            </li>
            <li class="m-3">
              <%= link_to "MyPage", member_path(current_user), class: 'nav-link text-dark border border-secondary rounded' %>
            </li>
            <li class="m-3">
              <%= link_to "Users", members_path, class: 'nav-link text-dark border border-secondary rounded' %>
            </li>
            <li class="m-3">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark border border-secondary rounded' %>
            </li>
          <% else %>
            <li class="m-3">
              <%= link_to "About", about_path, class: 'nav-link text-center text-dark border border-secondary rounded', style: "width: 80px" %>
            </li>
            <li class="m-3">
              <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark border border-secondary rounded' %>
            </li>
            <li class="m-3">
              <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark border border-secondary rounded' %>

            </li>

          <% end %>
          </ul>
        </div>
      </nav>

      <!--ウェルカムメッセージと検索窓-->
      <div class="row justify-content-center align-items-center ml-5">



      </div>
    </div>
  </div>
</header>

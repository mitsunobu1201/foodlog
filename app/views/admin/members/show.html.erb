<div class="row justify-content-center">
   <div class="col-10 m-0 mb-3">
<h3 class="mb-5">プロフィール編集</h3>
  </div>
    </div>
<%= form_with model:@member,url: admin_member_path(@member),local: true do |f| %>
  <div class="row align-items-center">
  <div class="col-md-6 mx-auto">
  <div class="mb-3 pb-4">
    <%= f.label :height,"メールアドレス" %><br />
    <%= @member.email %>
  </div>

  <p style="font-size:17px">ニックネーム&nbsp;<span class="badge bg-danger">必須</span></p>
  <div class="field pt-2 pb-5">
    <%= f.text_field :name,class:"form-control pt-2 pb-2",placeholder:"例)たろう"%>
  </div>
<p style="font-size:17px">性別&nbsp;<span class="badge bg-danger">必須</span></p>
  <div class="field pb-3 form-check">

      <%= f.radio_button :sex,"men" ,class:"form-check-input"%>男性<br />
      <%= f.radio_button :sex,"women" ,class:"form-check-input"%>女性<br />
  </div>

    <div class="field pt-2 pb-4">
              <p style="font-size:17px">誕生日&nbsp;<span class="badge bg-danger">必須</span></p>
      <%= f.date_select :birthday, order: [:year, :month, :day], start_year: Date.today.year - 100,
    end_year: Date.today.year,class: "form-control"%>
    </div>

    <script>
    $('#date_sample').datepicker({
        language:'ja'
    });
</script>
  <p style="font-size:17px">身長&nbsp;<span class="badge bg-danger">必須</span></p>
  <div class="field pb-4">
    <%= f.number_field :height,min:1,max:300,step: 0.1,class:"form-control pt-2 pb-2",placeholder:"cm"%>
  </div>
  <p style="font-size:17px">体重&nbsp;<span class="badge bg-danger">必須</span></p>
    <div class="field pb-4">
    <%= f.number_field :weight,min:1,max:300,step: 0.1,class:"form-control pt-2 pb-2",placeholder:"体重(kg)"%>
  </div>
  <p style="font-size:17px">プロフィール</p>
    <div class="field pb-4">
    <%= f.text_area :profile,class:"form-control pt-2 pb-2",placeholder:"プロフィール"%>
  </div>
        <p style="font-size:17px">目的&nbsp;<span class="badge bg-danger">必須</span></p>
    <div class="field pb-4 form-check">

      <%= f.radio_button :purpose,"training",class:"form-check-input" %>筋力トレーニング<br>
      <%= f.radio_button :purpose,"diet" ,class:"form-check-input"%>ダイエット<br>
      <%= f.radio_button :purpose,"health" ,class:"form-check-input"%>健康維持<br>
      <%= f.radio_button :purpose,"etc",class:"form-check-input" %>その他<br>
      </div>
     <p style="font-size:17px">日常的な運動&nbsp;<span class="badge bg-danger">必須</span></p>
  <div class="field pb-4 form-check">
      <%= f.radio_button :activity,"sedentary" ,class:"form-check-input"%>ほぼ運動しない<br />
      <%= f.radio_button :activity,"light",class:"form-check-input" %>軽い運動<br />
      <%= f.radio_button :activity,"moderate" ,class:"form-check-input"%>中等度の運動<br />
      <%= f.radio_button :activity,"intense" ,class:"form-check-input"%>激しい運動<br />
      <%= f.radio_button :activity,"very_intense" ,class:"form-check-input"%>非常に激しい運動<br />
  </div>

  <p style="font-size:17px">会員ステータス&nbsp;<span class="badge bg-danger">必須</span></p>
  <div class="field pb-2 form-check">
      <%= f.radio_button :status,"false" ,class:"form-check-input"%>有効<br />
      <%= f.radio_button :status,"true" ,class:"form-check-input"%>無効<br />

  </div>
  <div class="actions pt-2 pb-2">
    <%= f.submit "編集" ,class:"btn btn-sm btn btn-primary w-100 pt-2 pb-2"%>
    </div>
        <div class="field pt-2 pb-2 text-danger">



      <% if @member.errors.any? %>
  <ul>
    <% @member.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  </div>
  </div>
  </div>

<% end %>
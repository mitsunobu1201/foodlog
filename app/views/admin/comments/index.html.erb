  <h2 class="mt-3">コメント一覧</h2>
<% if @comments.empty? %>
<h3 class="mt-5">まだコメントされた投稿がありません。</h3>
<% else %>
  <div class="row">
    <div class="col-md-12 mx-auto mt-3">
      <table class="table table-striped">
        <thead>
          <tr>
      <th>コメントユーザー</th>
      <th>投稿先</th>
      <th>内容</th>
      <th></th>
          </tr>
      </thead>
        <tbody>
<% @comments.each do |comment| %>
<tr>
<td><%= User.find(comment.comment_user_id).name %></td>
<td><%= User.find(comment.user_id).name %></td>
<td><%= comment.comment %></td>
<td><%= link_to "削除", comment_path(comment.id), data: {turbo_method: :delete, turbo_confirm: "本当に削除しますか？"},class: "btn btn-danger" %></td>
</tr>
<% end %>
</tbody>
        </thead>
      </table>
<% end %>
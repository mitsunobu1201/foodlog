<div class="row">
  <div class="col-12 mb-5 d-flex justify-content-end">
    <div class="search_form">
      <%= form_with url: search_path, local: true, method: :get, class: "d-flex" do |f| %>
        <%= f.text_field :word, class: "form-control" %>
        <%= f.select :range, options_for_select([['User'], ['MyComment'],['MyComment Tag']]), {}, class: "form-select ms-2" %>
        <%= f.submit "search", class: "btn btn-primary ms-2" %>
      <% end %>
    </div>
  </div>
</div>
<h2 style="padding-bottom:100px">過去の記録</h2>

<div class="row mb-5">

<div class="row">
<div class="col-md-4 border">

<div>
<h3 class="pt-3 pb-3" style="display: inline-block;">直近1年間</h3>
(記録日数：<%= @records_dates_y.count %>日)
</div>
<%= render 'total_records', records: @records_y %>
<%= render 'average_records', records: @records_y,dates:@records_dates_y.count.to_i %>
</div>


<div class="col-md-4 border">
<div>
<h3 class="pt-3 pb-3" style="display: inline-block;">直近1ヶ月</h3>
(記録日数：<%= @records_dates_m.count %>日)
</div>
<%= render 'total_records', records: @records_m %>
<%= render 'average_records', records: @records_m,dates:@records_dates_m.count.to_i %>
</div>



<div class="col-md-4 border">
<div>
<h3 class="pt-3 pb-3" style="display: inline-block;">直近1週間</h3>
(記録日数：<%= @records_dates_w.count %>日)
</div>
<%= render 'total_records', records: @records_w %>
<%= render 'average_records', records: @records_w,dates:@records_dates_w.count.to_i %>
</div>

</div>
</div>

<div class="row">
  <div class="col-md-12 text-center">
<div class="mb-5">
  <h3><i class="fa-solid fa-ranking-star" style="color: #65e70d;"></i>　より多く食べている食品(全期間)　<i class="fa-solid fa-ranking-star" style="color: #65e70d;"></i></h3>
</div>
</div>
<% count = 1 %>
<% @top_meals.each do |food_id, total_quantity| %>
  <div class="col-md-4">
    <div>
      <% crown_color = case count
           when 1 then '#fbd204'
           when 2 then '#C0C0C0'
           when 3 then '#cd7f32'
         end %>
      <h3><i class="fa-solid fa-crown" style="color: <%= crown_color %>;"></i> 第<%= count %>位：<%= Food.find(food_id).name %></h3>
      <h5>合計<%= total_quantity %>の数を食べました！</h5>
    </div>
  </div>
  <% count += 1 %>
<% end %>

</div>
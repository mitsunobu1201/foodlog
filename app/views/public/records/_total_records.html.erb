<% @total_calorie, @total_protein, @total_fat, @total_carbohydrate = 0, 0, 0, 0 %>

<% records.each do |record| %>
<% @total_calorie += record.food.calorie * record.quantity %>
<% @total_protein += record.food.protein  * record.quantity %>
<% @total_fat += record.food.fat  * record.quantity %>
<% @total_carbohydrate += record.food.carbohydrate  * record.quantity %>
<% @chart = [['タンパク質', @total_protein], ['脂質', @total_fat],['炭水化物',@total_carbohydrate]] %>
<% end %>
<div class="mt-3 mb-5">
<%= pie_chart @chart %>
</div>
<div>
    <h5 class="bg-info px-1">合計栄養素</h5>
  <p>カロリー：：<%= number_with_precision(@total_calorie,precision: 1) %>kcal</p>
  <p>タンパク質：<%= number_with_precision(@total_calorie,precision: 1) %>g</p>
  <p>脂質：<%= number_with_precision(@total_calorie,precision: 1) %>g</p>
  <p>炭水化物：<%= number_with_precision(@total_calorie,precision: 1) %>g</p>
</div>